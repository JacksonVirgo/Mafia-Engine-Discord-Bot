// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Server {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  discordId String

  hostedGameIDs String[]       @db.ObjectId
  hostedGames   ArchivedGame[] @relation(fields: [hostedGameIDs], references: [id], name: "hosts")

  playedGameIDs String[]       @db.ObjectId
  playedGames   ArchivedGame[] @relation(fields: [playedGameIDs], references: [id])
}

model ArchivedGame {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  hostIDs String[] @db.ObjectId
  hosts   User[]   @relation(fields: [hostIDs], references: [id], name: "hosts")

  playerIDs String[] @db.ObjectId
  players   User[]   @relation(fields: [playerIDs], references: [id])
}
